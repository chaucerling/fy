#!/usr/bin/env ruby

require_relative '../lib/fy/fanyi'

help = <<HELP
fy: Translate tools in the command line
  $ fy word
  $ fy world peace
  $ fy chinglish
  $ fy
  > enter the loop mode, ctrl+c to exit
HELP

if ARGV.empty?
  begin
    loop do
      print '> '
      input = gets.chomp
      # 输入为空时继续循环
      next if input == ''
      puts Fy::Fanyi.new(input).result
    end
  rescue Interrupt
    puts 'bye~'
  end
elsif %w{-h --help}.any?{ |c| ARGV.include? c }
  puts help
else
  puts Fy::Fanyi.new(ARGV.join(' ')).result
end
